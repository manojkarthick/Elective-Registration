<div class='page-header'>
<h4>Sign up</h4> 
</div>


<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<form class="form-horizontal">

<div class="form-group form-group-lg">
<div class="col-sm-7">
  <%= f.input :email %></div></div>

<div class="form-group form-group-lg">
<div class="col-sm-7">
  <%= f.input :password %></div></div>
<div class="form-group form-group-lg">
<div class="col-sm-7">
  <%= f.input :password_confirmation %></div></div>
<div class="form-group">
    <div class="col-lg-10">
  <%= f.button :submit,:class => "btn-success"%></div></div>

  </form>
<% end %>

